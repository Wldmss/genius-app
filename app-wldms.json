{
    "expo": {
        "name": "kt-genius",
        "slug": "kt-genius",
        "scheme": "ktgenius",
        "version": "1.0.0",
        "owner": "wldms",
        "runtimeVersion": {
            "policy": "appVersion"
        },
        "orientation": "portrait",
        "icon": "./app/assets/icons/app-icon.png",
        "notification": {
            "icon": "./assets/push-icon.png",
            "color": "#FEB941"
        },
        "updates": {
            "url": "https://u.expo.dev/bd698549-609f-476e-9339-4d0566f95b31",
            "fallbackToCacheTimeout": 0
        },
        "userInterfaceStyle": "light",
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "buildNumber": "1.0.0",
            "supportsTablet": true,
            "requireFullScreen": true,
            "bundleIdentifier": "com.ktds.genius",
            "infoPlist": {
                "NSFaceIDUsageDescription": "Allow $(PRODUCT_NAME) to use Face ID.",
                "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access camera.",
                "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone",
                "UIBackgroundModes": ["location", "fetch", "remote-notification"]
            },
            "config": {
                "usesNonExemptEncryption": false
            },
            "associatedDomains": ["applinks:genius.ktds.com"]
        },
        "android": {
            "versionCode": 4,
            "adaptiveIcon": {
                "foregroundImage": "./app/assets/icons/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "permissions": [
                "android.permission.CAMERA",
                "android.permission.USE_BIOMETRIC",
                "android.permission.USE_FINGERPRINT",
                "android.permission.CAMERA",
                "android.permission.RECORD_AUDIO",
                "android.permission.INTERNET",
                "android.permission.FOREGROUND_SERVICE",
                "android.permission.SYSTEM_ALERT_WINDOW",
                "android.permission.WRITE_EXTERNAL_STORAGE"
            ],
            "package": "com.ktds.genius",
            "intentFilters": [
                {
                    "action": "VIEW",
                    "autoVerify": true,
                    "category": ["BROWSABLE", "DEFAULT"]
                }
            ]
        },
        "web": {
            "favicon": "./app/assets/icons/app-icon.png"
        },
        "extra": {
            "eas": {
                "projectId": "bd698549-609f-476e-9339-4d0566f95b31"
            },
            "router": {
                "origin": false
            }
        },
        "plugins": [
            [
                "expo-local-authentication",
                {
                    "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
                }
            ],
            [
                "expo-secure-store",
                {
                    "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
                }
            ],
            [
                "expo-screen-orientation",
                {
                    "initialOrientation": "DEFAULT"
                }
            ],
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
                    "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
                    "recordAudioAndroid": true
                }
            ],
            [
                "expo-barcode-scanner",
                {
                    "cameraPermission": "Allow $(PRODUCT_NAME) to access camera."
                }
            ],
            [
                "expo-updates",
                {
                    "username": "wldms"
                }
            ],
            "expo-router",
            [
                "expo-build-properties",
                {
                    "android": {
                        "usesCleartextTraffic": true
                    },
                    "ios": {
                        "useFrameworks": "static"
                    }
                }
            ],
            [
                "expo-font",
                {
                    "fonts": ["./app/assets/fonts/NotoSansKR-Regular.ttf"]
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/push-icon.png",
                    "color": "#FF70AB"
                }
            ]
        ]
    }
}
