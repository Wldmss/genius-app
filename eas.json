{
    "cli": {
        "version": ">= 7.3.0"
    },
    "build": {
        "base": {
            "node": "20.11.1",
            "env": {
                "EXPO_PUBLIC_NAME": "지니어스",
                "EXPO_PUBLIC_WEB": "https://naver.com",
                "EXPO_PUBLIC_TEST_SERVER_URL": "http://192.168.50.254:8080",
                "EXPO_PUBLIC_TEST_API_URL": "/api/v1/",
                "EXPO_PUBLIC_SERVER_URL": "https://ktedu.kt.com",
                "EXPO_PUBLIC_API_URL": "/"
            },
            "android": {
                "image": "latest",
                "buildType": "apk",
                "artifactPath": "지니어스_$(date +'%y%m%d-%H%M').apk"
            },
            "ios": {
                "image": "latest"
            },
            "channel": "base"
        },
        "preview": {
            "extends": "base",
            "channel": "preview",
            "distribution": "internal"
        },
        "development": {
            "extends": "base",
            "channel": "development",
            "developmentClient": true,
            "distribution": "internal",
            "autoIncrement": true,
            "ios": {
                "simulator": true
            }
        },
        "staging-android": {
            "extends": "base",
            "channel": "staging-android",
            "autoIncrement": true
        },
        "staging-ios": {
            "extends": "base",
            "channel": "staging-ios",
            "autoIncrement": true
        },
        "production-android": {
            "extends": "base",
            "channel": "production-android",
            "autoIncrement": true
        },
        "production-ios": {
            "extends": "base",
            "channel": "production-ios",
            "autoIncrement": true
        }
    },
    "submit": {
        "production": {}
    }
}
